modules = ["nodejs-20", "postgresql-16"]
run = "npm run dev"

[nix]
channel = "stable-24_05"
packages = ["nix-output-monitor"]

[workflows]
runButton = "Dev"

[[workflows.workflow]]
name = "Run"
author = 37176675
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Dev"
author = 37176675
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run server"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "cloudrun"
build = "npm run build"
run = "NODE_ENV=production node src/server.js"
