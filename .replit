modules = ["nodejs-20"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "static"
publicDir = "dist"
buildCommand = "npm run build"

[[deployment.rules]]
staticPath = "/assets"
urlPath = "/assets"

[[deployment.rules]]
staticPath = "/"
urlPath = "/"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[workflows]
runButton = "Run"

[[ports]]
localPort = 5000
externalPort = 80