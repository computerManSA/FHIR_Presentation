
run = "npm run dev"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "static"
publicDir = "dist"
buildCommand = "npm run build"

[[ports]]
localPort = 5000
externalPort = 80

[[deployment.rules]]
staticPath = "/"
urlPath = "/"

[[deployment.rules]]
staticPath = "/assets"
urlPath = "/assets"

[[deployment.responseHeaders]]
path = "/*.js"
name = "Content-Type"
value = "application/javascript"

[[deployment.responseHeaders]]
path = "/assets/*.js"
name = "Content-Type"
value = "application/javascript"

[[deployment.responseHeaders]]
path = "/*.css"
name = "Content-Type"
value = "text/css"

[[deployment.responseHeaders]]
path = "/assets/*.css"
name = "Content-Type"
value = "text/css"

[[deployment.rewrites]]
from = "/*"
to = "/index.html"
