modules = ["nodejs-20"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 37176675
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[deployment]
deploymentTarget = "static"
publicDir = "dist"
build = ["sh", "-c", "npm run build"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"
